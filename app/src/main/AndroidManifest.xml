<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.myitschool.appgameball">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ru.myitschool.appgameball.LoaderActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ru.myitschool.appgameball.MenuActivity"/>
        <activity android:name="ru.myitschool.appgameball.MainActivity"/>
        <activity android:name="ru.myitschool.appgameball.ChooseDifficultyActivity"/>

    </application>

</manifest>